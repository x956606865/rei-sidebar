{
    "manifest_version": 3,
    "name": "Rei Sidebar",
    "version": "1.0",
    "description": "Arc-style sidebar for Chrome",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "storage",
        "activeTab",
        "tabGroups"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Open Sidebar",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}